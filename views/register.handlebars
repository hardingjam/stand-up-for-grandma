 <div id="page">
     <div id="grandmaEmoji">
         👵🏻
    </div>
    <div class="demands">
        <h1>Join the campaign to get a better deal for Grandmas</h1>
        <h2>Register now to see our demands</h2>
    </div>
    {{#if error}}
        {{>duplicate-email}}
    {{/if}}
    {{#if registered}}
        {{>registered}}
    {{/if}}
    <form method="POST">
    <div id="form-and-button">
    <div id="form">
    <div class="userInfo">
            <input name="firstName" placeholder="First Name" required/>
            <input name="lastName" placeholder="Last Name" required/>
            <input name="email" placeholder="E-Mail" required/>
            <input name="age" type="number" min="16" max="120" placeholder="Age" required/>
            <input name="country" placeholder="Country" required/>
            <input name="password" type="password" placeholder="Password" required/>
            {{!-- <input name="re-enter" type="password" placeholder="Re-enter your password" required> --}}
            {{!-- <div id="results"></div> --}}
    </div>
    
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    
    </div>
  
    <button type="submit" id="submit">Register Now</button>
     </div>
    </form>




 </div>

